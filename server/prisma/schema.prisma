generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement()) //@id代表主鍵 @default(autoincrement)代表它會自動增長
  name String
  email String @unique //unique代表"唯一"
}

model Account{
  id Int @id @default(autoincrement())
  account String
  password String
  userId Int @unique
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

