generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement()) //@id代表主鍵 @default(autoincrement)代表它會自動增長
  name String
  email String @unique //unique代表"唯一"
  password String

  carts Cart[] //1對多關聯 user可以有多個cart 這個使用者的購物車項目
}

model Product{
  id Int @id @default(autoincrement())
  proname String
  price Int
  description String?
  stock Int

  carts Cart[] //這個出現在哪個購物車 1對多關聯
}

model Cart{
  id Int @id @default(autoincrement())
  userId Int //外鍵
  productId Int //外鍵
  quantity Int

  user User @relation(fields:[userId], references:[id], onDelete: Cascade)//關聯使用者
  product Product @relation(fields: [productId], references: [id], onDelete:Cascade) //關聯商品
}

